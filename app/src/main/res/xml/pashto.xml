<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyHeight="@dimen/key_height_pa"
    android:keyWidth="10%p"
    android:verticalGap="10px">
    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:keyLabel="ص"
            android:popupCharacters="ض"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key
            android:keyLabel="ث"/>
        <Key
            android:keyLabel="ق" />
        <Key
            android:keyLabel="ف" />
        <Key
            android:keyLabel="ځ" />
        <Key
            android:keyLabel="څ"
            android:keyWidth="10%" />
        <Key
            android:keyLabel="خ" />
        <Key
            android:keyLabel="ح" />
        <Key
            android:keyLabel="چ" />
        <Key
            android:keyEdgeFlags="right"
            android:keyLabel="ج" />
    </Row>

    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:keyLabel="ش" />
        <Key android:keyLabel="س" />
        <Key android:keyLabel="ب" />
        <Key android:keyLabel="ل" />
        <Key
            android:keyLabel="ا"
            android:popupCharacters="ءأآ"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key android:keyLabel="ت" />
        <Key
            android:keyLabel="ن"
            android:keyWidth="10%"
            android:popupCharacters="ڼ"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key android:keyLabel="م" />
        <Key android:keyLabel="ک" />
        <Key
            android:keyEdgeFlags="right"
            android:keyLabel="ګ" />
    </Row>

    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:keyLabel="ښ" />
        <Key android:keyLabel="ې" />
        <Key android:keyLabel="ی" />
        <Key
            android:keyLabel="ي"
            android:popupCharacters="ۍئ"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key
            android:keyLabel="و"
            android:popupCharacters="ؤ"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key
            android:keyLabel="ټ"
            android:popupCharacters="ة"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key android:keyLabel="پ" />
        <Key android:keyLabel="ه" />
        <Key android:keyLabel="غ" />
        <Key
            android:keyEdgeFlags="right"
            android:keyLabel="ع" />
    </Row>
    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:keyLabel="ط"
            android:popupCharacters="ظ"
            android:popupKeyboard="@xml/popup_keyboard" />
        <Key android:keyLabel="ږ" />
        <Key android:keyLabel="ژ" />
        <Key android:keyLabel="ز" />
        <Key android:keyLabel="ړ" />
        <Key android:keyLabel="ر" />
        <Key android:keyLabel="ذ" />
        <Key android:keyLabel="ډ" />
        <Key android:keyLabel="د" />
        <Key
            android:codes="-5"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_backspace_24dp"
            android:keyWidth="10%" />
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key
            android:codes="-2"
            android:keyEdgeFlags="left"
            android:keyLabel="۳۲۱؟\"
            android:keyWidth="15%p" />
        <Key
            android:codes="-10000"
            android:keyIcon="@drawable/ic_insert_emoticon_white_24dp"
            android:keyWidth="10%p" />
        <!--
            android:codes: -101 is not a framework-defined key code but a key code that is
            privately defined in com.example.android.softkeyboard.LatinKeyboardView.
        -->
        <Key
            android:codes="-101"
            android:keyIcon="@drawable/ic_language_24dp"
            android:keyWidth="10%p" />
        <Key
            android:codes="32"
            android:isRepeatable="true"
            android:keyIcon="@drawable/ic_space_bar_white_24dp"
            android:keyWidth="30%p" />
        <Key
            android:codes="-10001"
            android:isRepeatable="true"
            android:keyLabel="-|-"
            android:keyWidth="10%p" />
        <Key
            android:keyLabel="."
            android:keyWidth="10%p"
            android:popupKeyboard="@xml/popup_symbols" />
        <Key
            android:codes="10"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_next_circle_filled_45dp"
            android:keyWidth="15%p" />
    </Row>
</Keyboard>